@model LessonViewModel
@{
    ViewData["Title"] = "CreateLesson";
}

<a asp-controller="Lesson" asp-action="Index" style="text-decoration: none;color: #beac6f; margin-bottom:3%!important;">Dərslər</a>
@{
    @if (ViewData["success"] is bool success)
    {
        {
            ViewData["msg"] = "Dəyişikliklər müvəffəqiyyətlə yerinə yetirildi!";
        }

        <div class="container">
            <div class="row">
                <div class="col-md-12" style="padding: 5px 0 0 10px; margin-bottom: -25px">
                    @{
                        var partialView = success ? "PartialViews/SuccessAlert" : "PartialViews/DangerAlert";
                        <partial name="@partialView" view-data="ViewData" />
                    }
                </div>
            </div>
        </div>
    }
}

<div class="container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <div class="mt-5">
        <form method="POST" asp-action="CreateLesson" asp-controller="Lesson">
            <div class="input-group mb-3">
                <label for="LessonName" class="col-3">Lesson Name</label>
                <input type="text" class="form-control col-9" asp-for="LessonName" maxlength="30">

            </div>

            <div class="input-group mb-3">
                <label for="Class" class="col-3">Class</label>
                <input type="number" name="Class" asp-for="Class" class="form-control col-9">
            </div>

            <div class="input-group mb-3">
                <label for="TeacherName" class="col-3">Teacher Name</label>
                <input type="text" name="TeacherName" asp-for="TeacherName" class="form-control col-9" maxlength="20">
            </div>
            <div class="input-group mb-3">
                <label for="TeacherSurname" class="col-3">Teacher Surname</label>
                <input type="text" name="TeacherSurname" asp-for="TeacherSurname" class="form-control col-9" maxlength="20">
            </div>


            <button type="submit" class="btn btn-primary">
                Create
            </button>
        </form>
    </div>

</div>
